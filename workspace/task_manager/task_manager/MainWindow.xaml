<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="OnAbout"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1">
            <TabItem Header="Tasks">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Create Task" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnCreateTask"/>
                    <Button Content="Assign Task" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="OnAssignTask"/>
                    <Button Content="Track Task" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="OnTrackTask"/>
                </Grid>
            </TabItem>
            <TabItem Header="Code Review">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Submit Code" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnSubmitCode"/>
                    <Button Content="Review Code" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="OnReviewCode"/>
                </Grid>
            </TabItem>
            <TabItem Header="Notifications">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Send Notification" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Click="OnSendNotification"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
